<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.expensedash.client.controllers.AddExpenseController"
      spacing="12" padding="16"
      style="-fx-background-color: #f8fdfc;">
    <children>
        <Label text="Add Expense" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #004d40;"/>
        <TextField fx:id="descField" promptText="Description"/>
        <TextField fx:id="amountField" promptText="Amount (e.g. 25.50)"/>
        <ComboBox fx:id="payerBox" promptText="Select Payer"/>
        <Label text="Participants:" style="-fx-font-weight: bold;"/>
        <ListView fx:id="participantsList" prefHeight="150"/>
        <HBox spacing="8">
            <Button text="Equal Split" onAction="#onEqualSplit" style="-fx-background-color: #009688; -fx-text-fill: white;"/>
            <Button text="Add" onAction="#onAdd" style="-fx-background-color: #00796b; -fx-text-fill: white;"/>
            <Button text="Cancel" onAction="#onCancel" style="-fx-background-color: #c62828; -fx-text-fill: white;"/>
        </HBox>
    </children>
</VBox>
