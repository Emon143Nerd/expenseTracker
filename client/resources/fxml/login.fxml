<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.expensedash.client.controllers.LoginController"
      spacing="12">
    <padding>
        <Insets top="16" right="16" bottom="16" left="16"/>
    </padding>

    <children>
        <Label text="ExpenseDash Login" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
        <TextField fx:id="usernameField" promptText="Username"/>
        <PasswordField fx:id="passwordField" promptText="Password"/>
        <HBox spacing="8">
            <children>
                <Button text="Login" onAction="#onLogin"/>
                <Button text="Register" onAction="#onRegister"/>
            </children>
        </HBox>
    </children>
</VBox>
