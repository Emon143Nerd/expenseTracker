<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<VBox xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.expensedash.client.controllers.AddExpenseController"
      spacing="10" padding="14">
    <children>
        <TextField fx:id="descField" promptText="Description (e.g., Groceries)"/>
        <TextField fx:id="amountField" promptText="Amount (e.g., 25.50)"/>
        <ComboBox fx:id="payerBox" promptText="Payer"/>
        <Label text="Participants"/>
        <ListView fx:id="participantsList" prefHeight="140"/>
        <HBox spacing="8">
            <children>
                <Button text="Equal Split" onAction="#onEqualSplit"/>
                <Button text="Add" onAction="#onAdd"/>
                <Button text="Cancel" onAction="#onCancel"/>
            </children>
        </HBox>
    </children>
</VBox>
