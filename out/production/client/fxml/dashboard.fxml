<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.chart.PieChart?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.expensedash.client.controllers.DashboardController"
            style="-fx-background-color: #f9fafa;">

    <!-- LEFT PANEL -->
    <left>
        <VBox spacing="10.0" prefWidth="300.0" style="-fx-background-color: #e0f2f1;">
            <children>
                <Label text="Search Groups"
                       style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #004d40;"/>

                <TextField fx:id="groupSearch" promptText="Type group name to search..."
                           style="-fx-background-color: #00796b; -fx-text-fill: black;"/>

                <HBox spacing="8.0">
                    <Button text="🔍 Search"
                            onAction="#onSearchGroup"
                            style="-fx-background-color: #00796b; -fx-text-fill: white;"/>
                    <Button text="+ Create Group"
                            onAction="#onCreateGroup"
                            style="-fx-background-color: #009688; -fx-text-fill: white;"/>
                </HBox>

                <ListView fx:id="groupList">
                    <VBox.vgrow>ALWAYS</VBox.vgrow>
                </ListView>

                <Button text="Join Selected Group" onAction="#onJoinGroup"
                        style="-fx-background-color: #009688; -fx-text-fill: white;"/>
                <Button text="🔄 Refresh Dashboard" onAction="#onRefresh"
                        style="-fx-background-color: #4caf50; -fx-text-fill: white;"/>

            </children>
            <padding>
                <Insets top="16.0" right="12.0" bottom="16.0" left="12.0"/>
            </padding>
        </VBox>
    </left>

    <!-- CENTER CONTENT -->
    <center>
        <VBox spacing="12.0">
            <padding>
                <Insets top="16.0" right="16.0" bottom="16.0" left="16.0"/>
            </padding>

            <children>
                <Label fx:id="welcomeLabel"
                       text="Welcome!"
                       style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #00796b;"/>

                <!-- Totals -->
                <HBox spacing="12.0">
                    <children>
                        <TitledPane text="Total Paid">
                            <content>
                                <Label fx:id="totalPaid"
                                       text="0.00"
                                       style="-fx-font-size: 22px; -fx-text-fill: #00796b;"/>
                            </content>
                        </TitledPane>
                        <TitledPane text="Total Owed">
                            <content>
                                <Label fx:id="totalOwed"
                                       text="0.00"
                                       style="-fx-font-size: 22px; -fx-text-fill: #d32f2f;"/>
                            </content>
                        </TitledPane>
                        <TitledPane text="Total Receivable">
                            <content>
                                <Label fx:id="totalReceivable"
                                       text="0.00"
                                       style="-fx-font-size: 22px; -fx-text-fill: #f57c00;"/>
                            </content>
                        </TitledPane>
                    </children>
                </HBox>

                <!-- Table + Chart -->
                <HBox spacing="12.0">
                    <children>
                        <TitledPane text="My Balances" VBox.vgrow="ALWAYS">
                            <content>
                                <TableView fx:id="balancesTable" prefHeight="300.0">
                                    <columns>
                                        <TableColumn fx:id="colName" text="Name" prefWidth="200.0"/>
                                        <TableColumn fx:id="colAmount" text="Amount" prefWidth="120.0"/>
                                        <TableColumn fx:id="colStatus" text="Status" prefWidth="120.0"/>
                                    </columns>
                                </TableView>
                            </content>
                        </TitledPane>

                        <TitledPane text="Group Expense Distribution">
                            <content>
                                <PieChart fx:id="pieChart" prefWidth="400.0" prefHeight="300.0"/>
                            </content>
                        </TitledPane>
                    </children>
                </HBox>

                <!-- Add Expense Section -->
                <VBox spacing="8.0"
                      style="-fx-background-color: #f0f0f0; -fx-padding: 10;">
                    <Label text="Add New Expense"
                           style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #004d40;"/>
                    <HBox spacing="10.0">
                        <TextField fx:id="expenseAmount"
                                   promptText="Enter amount (e.g., 45.00)"
                                   style="-fx-pref-width: 150;
                          -fx-text-fill: black;
                          -fx-background-color: white;
                          -fx-border-color: #bdbdbd;
                          -fx-border-radius: 4;
                          -fx-background-radius: 4;"/>
                        <TextField fx:id="expenseDescription"
                                   promptText="Enter description (e.g., Lunch at cafe)"
                                   style="-fx-pref-width: 250;
                          -fx-text-fill: black;
                          -fx-background-color: white;
                          -fx-border-color: #bdbdbd;
                          -fx-border-radius: 4;
                          -fx-background-radius: 4;"/>
                        <Button text="➕ Add Expense"
                                onAction="#onAddExpense"
                                style="-fx-background-color: #26a69a;
                       -fx-text-fill: white;
                       -fx-font-weight: bold;
                       -fx-cursor: hand;"/>
                    </HBox>
                </VBox>


                <!-- Bottom Actions -->
                <HBox spacing="10.0">
                    <children>
                        <Button text="View History" onAction="#onViewHistory"
                                style="-fx-background-color: #00897b; -fx-text-fill: white;"/>
                        <Button text="Settle Balances" onAction="#onSettleBalances"
                                style="-fx-background-color: #00796b; -fx-text-fill: white;"/>
                    </children>
                </HBox>
            </children>
        </VBox>
    </center>

    <!-- TOP BAR -->
    <top>
        <HBox spacing="8.0"
              style="-fx-background-color: #004d40; -fx-border-color: #00695c; -fx-border-width: 0 0 1 0;">
            <padding>
                <Insets top="12.0" right="12.0" bottom="12.0" left="12.0"/>
            </padding>
            <children>
                <Label text="ExpenseDash Dashboard"
                       style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: white;"/>
                <Pane HBox.hgrow="ALWAYS"/>
                <Button text="Logout" onAction="#onLogout"
                        style="-fx-background-color: #00796b; -fx-text-fill: white;"/>
            </children>
        </HBox>
    </top>
</BorderPane>
