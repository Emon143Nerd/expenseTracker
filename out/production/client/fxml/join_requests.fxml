<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/8.0.171"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.expensedash.client.controllers.JoinRequestsController"
      spacing="10" alignment="CENTER" style="-fx-padding: 15;">
    <Label text="Pending Join Requests" style="-fx-font-size: 16px; -fx-font-weight: bold;" />
    <ListView fx:id="requestList" prefHeight="250" prefWidth="360" />
    <HBox spacing="10" alignment="CENTER">
        <Button text="Approve" onAction="#onApprove" />
        <Button text="Reject" onAction="#onReject" />
        <Button text="Close" onAction="#onClose" />
    </HBox>
</VBox>
