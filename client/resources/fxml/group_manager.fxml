<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.expensedash.client.controllers.GroupManagerController"
            style="-fx-background-color: #f9fafa;">

    <top>
        <Label text="Create or View Groups"
               style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #004d40; -fx-padding: 10;"/>
    </top>

    <center>
        <VBox spacing="10.0" padding="15.0">
            <children>
                <HBox spacing="10.0">
                    <TextField fx:id="groupNameField" promptText="Enter group name" />
                    <TextField fx:id="categoryField" promptText="Enter category (optional)" />
                    <Button fx:id="addGroupButton" text="+ Add Group"
                            onAction="#onAddGroup"
                            style="-fx-background-color: #009688; -fx-text-fill: white;"/>
                </HBox>

                <ListView fx:id="groupList" prefHeight="300.0" VBox.vgrow="ALWAYS" />

                <Label fx:id="statusLabel" textFill="gray" wrapText="true"/>
            </children>
        </VBox>
    </center>

    <bottom>
        <HBox alignment="CENTER_RIGHT" padding="10.0">
            <Button text="Close" onAction="#onClose"
                    style="-fx-background-color: #00796b; -fx-text-fill: white;"/>
        </HBox>
    </bottom>
</BorderPane>
