<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.expensedash.client.controllers.LoginController"
      spacing="12"
      style="-fx-background-color: #f5f5f5;">
    <padding>
        <Insets top="16" right="16" bottom="16" left="16"/>
    </padding>

    <children>
        <Label text="ExpenseDash Login" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
        <TextField fx:id="usernameField" promptText="Username"/>
        <PasswordField fx:id="passwordField" promptText="Password"/>

        <HBox spacing="8" alignment="CENTER">
            <children>
                <!-- âœ… Added fx:id for controller link -->
                <Button fx:id="loginButton" text="Login" onAction="#onLogin"
                        style="-fx-background-color: #26a69a; -fx-text-fill: white;"/>
                <Button fx:id="registerButton" text="Register" onAction="#onRegister"
                        style="-fx-background-color: #00796b; -fx-text-fill: white;"/>
            </children>
        </HBox>
    </children>
</VBox>
